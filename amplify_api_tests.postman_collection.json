              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/s3/admin/signed-urls/{{userId}}?expires=3600",
              "host": ["{{base_url}}"],
              "path": ["api", "s3", "admin", "signed-urls", "{{userId}}"],
              "query": [
                {
                  "key": "expires",
                  "value": "3600",
                  "description": "Expiration time in seconds"
                }
              ]
            },
            "description": "Admin endpoint to get a signed URL for any user's image"
