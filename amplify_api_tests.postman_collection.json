    {
      "name": "User Image Management",
      "description": "Endpoints for user image uploads and management",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "fullname",
                  "value": "Test User",
                  "type": "text"
                },
                {
                  "key": "rekognitionId",
                  "value": "",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "upload"]
            },
            "description": "Upload an image to S3 and update user record"
          }
        },
        {
          "name": "Delete Image",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/delete",
              "host": ["{{base_url}}"],
              "path": ["api", "delete"]
            },
            "description": "Delete the current user's uploaded image"
          }
        },
        {
          "name": "Get My Upload Info",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/my-upload",
              "host": ["{{base_url}}"],
              "path": ["api", "my-upload"]
            },
            "description": "Get information about the current user's uploaded image"
          }
        },
        {
          "name": "Retrieve Image URL",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/retrieve-image",
              "host": ["{{base_url}}"],
              "path": ["api", "retrieve-image"]
            },
            "description": "Get the URL of the current user's uploaded image"
          }
        },
        {
          "name": "Check Image Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/get-image-status/{{userId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "get-image-status", "{{userId}}"]
            },
            "description": "Check if a user has an uploaded image and get its status"
          }
        },
        {
          "name": "Get My Signed URL",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{user_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/my-signed-url?expires=1",
              "host": ["{{base_url}}"],
              "path": ["api", "my-signed-url"],
              "query": [
                {
                  "key": "expires",
                  "value": "1",
                  "description": "Expiration time in hours"
                }
              ]
            },
            "description": "Get a signed URL to access the current user's image"
          }
        }
      ]
    },
    {
